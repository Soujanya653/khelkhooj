

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Candidate Profile Setup - Scout.it</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(135deg, #e3f2fd, #ffffff);
      font-family: 'Poppins', sans-serif;
      margin: 0;
    }

    .profile-container {
      background: #ffffff;
      padding: 2.5rem 2rem;
      border-radius: 16px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 500px;
      transition: all 0.3s ease;
    }

    h2 {
      text-align: center;
      font-weight: 600;
      color: #0d6efd;
      margin-bottom: 1.8rem;
    }
  </style>
</head>

<body>
  <div class="profile-container">
    <h2>Candidate Profile Setup</h2>

    <!-- Flash Messages -->
    <%
    var successArray = [];
    var errorArray = [];

    if (Array.isArray(success_msg)) successArray = success_msg;
    else if (success_msg) successArray = [success_msg];

    if (Array.isArray(error_msg)) errorArray = error_msg;
    else if (error_msg) errorArray = [error_msg];
    %>


    <% successArray.forEach(msg => { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% }) %>

    <% errorArray.forEach(msg => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% }) %>

    <form action="/profile/setup" method="POST">
      <input class="form-control mb-3" type="text" name="sport" placeholder="Sport" required>
      <input class="form-control mb-3" type="number" name="age" placeholder="Age" required>
      <input class="form-control mb-3" type="text" name="awards" placeholder="Awards">
      <input class="form-control mb-3" type="text" name="media" placeholder="Media (URL)">
      <input class="form-control mb-3" type="text" name="distancePreference" placeholder="Distance Preference">
      <input class="form-control mb-3" type="text" name="budget" placeholder="Budget">
      <button class="btn btn-primary" type="submit">Save Profile</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
