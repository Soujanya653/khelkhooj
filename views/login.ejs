<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login - Scout.it</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: linear-gradient(135deg, #e3f2fd, #ffffff);
      font-family: 'Poppins', sans-serif;
      margin: 0;
    }

    .login-container {
      background: #ffffff;
      padding: 2.5rem 2rem;
      border-radius: 16px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 420px;
      transition: all 0.3s ease;
    }

    .login-container:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    }

    h2 {
      text-align: center;
      font-weight: 600;
      color: #0d6efd;
      margin-bottom: 1.8rem;
    }

    .form-control {
      border-radius: 10px;
      padding: 12px;
      border: 1px solid #ced4da;
      transition: all 0.2s ease-in-out;
    }

    .form-control:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.2);
    }

    .btn-primary {
      background-color: #0d6efd;
      border: none;
      border-radius: 10px;
      padding: 12px;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #084298;
    }

    .extra-options {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.9rem;
    }

    a {
      color: #0d6efd;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    .alert {
      border-radius: 10px;
      font-size: 0.9rem;
    }

    @media (max-width: 480px) {
      .login-container {
        margin: 1rem;
        padding: 2rem 1.5rem;
      }
    }
  </style>
</head>
<body>

  <div class="login-container">
    <h2>Welcome Back ðŸ‘‹</h2>

    <!-- âœ… Flash Messages -->
    <% 
      const successArray = Array.isArray(success_msg) ? success_msg : (success_msg ? [success_msg] : []);
      const errorArray = Array.isArray(error_msg) ? error_msg : (error_msg ? [error_msg] : []);
      const passportErrorArray = Array.isArray(error) ? error : (error ? [error] : []);
    %>

    <% successArray.forEach(msg => { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% }) %>

    <% errorArray.forEach(msg => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% }) %>

    <% passportErrorArray.forEach(msg => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% }) %>

    <!-- âœ… Login Form -->
    <form action="/login" method="POST">
      <input class="form-control mb-3" type="email" name="email" placeholder="Email" 
             value="<%= typeof email !== 'undefined' ? email : '' %>" required>
      <input class="form-control mb-3" type="password" name="password" placeholder="Password" required>

      <div class="extra-options mb-3">
        <div>
          <input type="checkbox" id="remember" name="remember">
          <label for="remember" class="ms-1 text-muted">Remember me</label>
        </div>
        <a href="/forgot-password" class="text-muted">Forgot password?</a>
      </div>

      <button class="btn btn-primary w-100" type="submit">Login</button>
    </form>

    <p class="text-center mt-4 mb-0">
      Donâ€™t have an account? <a href="/signup">Sign up here</a>
    </p>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
