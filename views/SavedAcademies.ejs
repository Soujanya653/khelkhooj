<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Saved Academies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #f8fbff, #e3f2fd);
      font-family: 'Poppins', sans-serif;
      padding: 2rem;
    }
    .academy-card {
      background: #fff;
      border-radius: 16px;
      padding: 1.5rem;
      margin-bottom: 1rem;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .btn-back {
      margin-bottom: 1.5rem;
    }
  </style>
</head>
<body>

  <div class="container">
    <a class="btn btn-secondary btn-back" href="/dashboard">‚Üê Back to Dashboard</a>
    <h2 class="text-primary mb-4">Saved Academies</h2>

    <% if (academies.length > 0) { %>
      <% academies.forEach(a => { %>
        <div class="academy-card">
          <h4><%= a.user?.name || "Academy" %></h4>
          <p><strong>Location:</strong> <%= a.location %></p>
          <p><strong>Sports Offered:</strong> <%= a.sportsOffered %></p>
          <p><strong>Fees:</strong> <%= a.fees %></p>
          <p><strong>Facilities:</strong> <%= a.facilities %></p>
          <p><strong>Description:</strong> <%= a.description %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p>No academies found.</p>
    <% } %>

  </div>

</body>
</html>
